<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
        <%= link_to recipe.title, recipe %>

        </div>
        
        <div class="panel-body">
         By <%= link_to recipe.author %> <br>
          <i>Posted <%= recipe.created_at.strftime('%m/%d/%Y at %I:%M%p') %></i>
          <p>Ingredients: <%= recipe.ingredients[0..250] %>...[<%= link_to "Read More", recipe %>]</p>
        </div>
        <div class="panel-footer">
          <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-warning" %>
          <%= link_to "Delete", recipe, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
 

<br>

<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-default" %>

